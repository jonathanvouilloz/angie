---
// Bulle cliquable représentant une problématique client
// S'anime au hover et déclenche l'ouverture du modal

interface Props {
  emoji: string;
  title: string;
  scenarioId: string;
  service: 'dev-web' | 'automatisation' | 'applications';
  position?: 'top-left' | 'top-right' | 'bottom-left' | 'bottom-right' | 'left' | 'right' | 'top' | 'bottom';
}

const { emoji, title, scenarioId, service, position = 'top-left' } = Astro.props;
---

<button
  class="scenario-bubble"
  data-scenario-id={scenarioId}
  data-service={service}
  type="button"
  aria-label={`Découvrir la solution pour: ${title}`}
>
  <span class="bubble-emoji">{emoji}</span>
  <span class="bubble-text">{title}</span>

  <!-- Tooltip -->
  <span class="bubble-tooltip">
    Découvrir la solution
    <svg class="tooltip-arrow" width="12" height="8" viewBox="0 0 12 8">
      <path d="M6 8L0 0h12L6 8z" fill="currentColor"/>
    </svg>
  </span>
</button>

<style>
  .scenario-bubble {
    /* Reset */
    border: none;
    font-family: inherit;

    /* Layout */
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1.25rem;

    /* Style brutaliste avec exception border-radius pour effet bulle */
    background: white;
    border: 2px solid black;
    border-radius: 24px;
    box-shadow: 4px 4px 0px rgba(0, 0, 0, 0.3);

    /* Typographie */
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text, #0F172A);
    white-space: nowrap;

    /* Interaction */
    cursor: pointer;
    position: relative;

    /* Animation - courbe fluide et naturelle */
    transition:
      transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1),
      box-shadow 0.25s ease,
      background-color 0.25s ease;
  }

  .bubble-emoji {
    font-size: 1.25rem;
    line-height: 1;
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .bubble-text {
    line-height: 1.2;
  }

  /* Tooltip */
  .bubble-tooltip {
    position: absolute;
    bottom: calc(100% + 10px);
    left: 50%;
    transform: translateX(-50%) translateY(5px);

    background: var(--text, #0F172A);
    color: white;
    padding: 0.5rem 0.875rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 500;
    white-space: nowrap;

    opacity: 0;
    visibility: hidden;
    transition: all 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
    pointer-events: none;
  }

  .tooltip-arrow {
    position: absolute;
    bottom: -7px;
    left: 50%;
    transform: translateX(-50%);
    color: var(--text, #0F172A);
  }

  /* Hover state - smooth */
  .scenario-bubble:hover {
    transform: translateY(-4px);
    box-shadow: 5px 5px 0px rgba(0, 0, 0, 0.25);
    background: var(--main-bg, #FAFAFA);
  }

  .scenario-bubble:hover .bubble-emoji {
    transform: scale(1.1);
  }

  .scenario-bubble:hover .bubble-tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
    transition-delay: 0.5s;
  }

  /* Focus state (accessibilité) */
  .scenario-bubble:focus {
    outline: none;
    box-shadow:
      6px 6px 0px rgba(0, 0, 0, 0.35),
      0 0 0 3px var(--blue, #00D9A3);
  }

  .scenario-bubble:focus-visible {
    box-shadow:
      6px 6px 0px rgba(0, 0, 0, 0.35),
      0 0 0 3px var(--blue, #00D9A3);
  }

  /* Active state */
  .scenario-bubble:active {
    transform: translateY(0) scale(0.98);
    box-shadow: 2px 2px 0px rgba(0, 0, 0, 0.3);
  }

  /* Couleurs selon le service */
  .scenario-bubble[data-service="automatisation"]:hover {
    background: rgba(0, 217, 163, 0.1);
  }

  .scenario-bubble[data-service="applications"]:hover {
    background: rgba(163, 0, 217, 0.1);
  }

  .scenario-bubble[data-service="dev-web"]:hover {
    background: rgba(0, 150, 255, 0.1);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .scenario-bubble {
      padding: 0.75rem 1rem;
      font-size: 0.85rem;
      gap: 0.5rem;
    }

    .bubble-emoji {
      font-size: 1.1rem;
    }

    /* Pas de tooltip sur mobile */
    .bubble-tooltip {
      display: none;
    }
  }

  /* Animation d'entrée pour la page */
  @keyframes bubblePop {
    0% {
      opacity: 0;
      transform: scale(0.8) translateY(10px);
    }
    60% {
      transform: scale(1.05) translateY(-2px);
    }
    100% {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  .scenario-bubble {
    animation: bubblePop 0.5s ease-out backwards;
  }
</style>
