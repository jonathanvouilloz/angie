---
// Bulle de message dans la conversation modal
// Style différent selon le speaker (client ou jon)

interface Props {
  speaker: 'client' | 'jon';
  text: string;
  delay?: number; // Délai d'animation en ms
}

const { speaker, text, delay = 0 } = Astro.props;
const isJon = speaker === 'jon';
---

<div
  class:list={['message', `message-${speaker}`]}
  style={`--delay: ${delay}ms`}
>
  <!-- Avatar -->
  <div class="message-avatar">
    {isJon ? (
      <span class="avatar-jon">JV</span>
    ) : (
      <span class="avatar-client">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
        </svg>
      </span>
    )}
  </div>

  <!-- Bulle de texte -->
  <div class="message-bubble">
    <p class="message-text">{text}</p>
  </div>
</div>

<style>
  .message {
    display: flex;
    align-items: flex-end;
    gap: 0.75rem;
    max-width: 85%;
    margin-bottom: 1rem;

    /* Animation d'apparition */
    opacity: 0;
    transform: translateY(15px);
    animation: messageAppear 0.4s ease-out forwards;
    animation-delay: var(--delay);
  }

  @keyframes messageAppear {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Client - aligné à gauche */
  .message-client {
    align-self: flex-start;
    flex-direction: row;
  }

  /* Jon - aligné à droite */
  .message-jon {
    align-self: flex-end;
    flex-direction: row-reverse;
  }

  /* Avatars */
  .message-avatar {
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid black;
  }

  .avatar-client {
    background: #E5E5E5;
    color: #666;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .avatar-jon {
    background: var(--blue, #00D9A3);
    color: black;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.75rem;
    letter-spacing: -0.5px;
  }

  /* Bulles de message */
  .message-bubble {
    padding: 0.875rem 1.125rem;
    border: 2px solid black;
    box-shadow: 2px 2px 0px rgba(0, 0, 0, 0.15);
  }

  .message-client .message-bubble {
    background: #F5F5F5;
    border-radius: 16px 16px 16px 4px;
  }

  .message-jon .message-bubble {
    background: var(--blue, #00D9A3);
    border-radius: 16px 16px 4px 16px;
  }

  .message-text {
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.5;
    color: var(--text, #0F172A);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .message {
      max-width: 90%;
      gap: 0.5rem;
    }

    .message-avatar {
      width: 32px;
      height: 32px;
    }

    .message-bubble {
      padding: 0.75rem 1rem;
    }

    .message-text {
      font-size: 0.9rem;
    }
  }

  /* Animation subtile au hover pour feedback */
  .message-bubble {
    transition: box-shadow 0.2s ease-out;
  }

  .message:hover .message-bubble {
    box-shadow: 3px 3px 0px rgba(0, 0, 0, 0.2);
  }
</style>
