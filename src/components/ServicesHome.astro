---
import svgPinkStar from '../assets/pink-star.svg'
import { services } from '../sample'
---

<section class="py-16 md:py-24 relative" id="services">
    <!-- Section decorations -->
    <img src={svgPinkStar.src} alt="" width="40" class="absolute top-8 right-12 opacity-60" aria-hidden="true" />

    <div class="max-w-6xl mx-auto px-4">

        <!-- Section header -->
        <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-12">
            <div>
                <span class="inline-block bg-[var(--blue)] border-2 border-black px-3 py-1 text-sm font-bold mb-4 shadow-[2px_2px_0px_rgba(0,0,0,1)]">
                    Services
                </span>
                <h2 class="text-3xl md:text-4xl font-medium tracking-tight">
                    Ce que je peux faire
                    <span class="relative inline-block ml-2">
                        <span class="absolute bg-[var(--accent)] w-full h-[40%] left-0 bottom-1 z-0"></span>
                        <span class="relative z-10">pour vous</span>
                    </span>
                </h2>
            </div>
            <a
                href="/services/"
                class="
                    inline-flex items-center gap-2
                    text-base font-bold
                    border-b-2 border-black
                    pb-1
                    transition-all duration-200
                    hover:border-[var(--blue)] hover:text-[var(--yellow)]
                "
            >
                Voir tous les services
                <i class="ri-arrow-right-line"></i>
            </a>
        </div>

        <!-- Services grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {services.map((service, index) => (
                <article
                    class="
                        group
                        flex flex-col
                        bg-white border-2 border-black
                        p-6
                        shadow-[4px_4px_0px_rgba(0,0,0,0.3)]
                        transition-all duration-300
                        hover:shadow-[8px_8px_0px_rgba(0,0,0,0.3)]
                        hover:translate-y-[-4px]
                        relative
                    "
                    style={`animation-delay: ${index * 100}ms`}
                >
                    <!-- Corner decoration -->
                    <div class="absolute top-0 right-0 w-8 h-8 bg-[var(--blue)] border-l-2 border-b-2 border-black opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

                    <!-- Icon -->
                    <div class="
                        w-14 h-14
                        flex items-center justify-center
                        bg-[var(--blue)] border-2 border-black
                        mb-5
                        shadow-[3px_3px_0px_rgba(0,0,0,1)]
                        group-hover:bg-[var(--yellow)]
                        transition-colors duration-200
                    ">
                        <i class={`${service.icon} text-2xl`}></i>
                    </div>

                    <!-- Content -->
                    <h3 class="text-xl font-bold mb-3">{service.title}</h3>
                    <p class="text-gray-600 leading-relaxed mb-5 flex-grow">
                        {service.description}
                    </p>

                    <!-- Link - aligned bottom -->
                    <a
                        href={service.link}
                        class="
                            inline-flex items-center gap-2
                            text-sm font-bold
                            mt-auto
                            relative
                            before:absolute before:left-0 before:bottom-0
                            before:h-[2px] before:w-0 before:bg-[var(--yellow)]
                            before:transition-all before:duration-300
                            group-hover:before:w-full
                        "
                    >
                        En savoir plus
                        <i class="ri-arrow-right-line transition-transform duration-200 group-hover:translate-x-1"></i>
                    </a>
                </article>
            ))}
        </div>

    </div>
</section>
