---
import type { CollectionEntry } from 'astro:content';
import CategoryBadge from './CategoryBadge.astro';
import { formatDate } from '../../lib/blog';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, image, category, tags, pubDate, readingTime } = post.data;
---

<section class="py-8 md:py-12 bg-white border-y-2 border-black">
  <div class="max-w-6xl mx-auto px-4">
    <!-- Section label -->
    <div class="flex items-center gap-3 mb-6">
      <span class="px-3 py-1 bg-[var(--violet)] text-white text-xs font-medium border border-black">
        A la une
      </span>
      <span class="h-px flex-1 bg-black/10"></span>
    </div>

    <!-- Featured card -->
    <article class="group relative bg-[var(--main-bg)] border-2 border-black shadow-[6px_6px_0px_rgba(0,0,0,0.3)] overflow-hidden transition-all duration-300 hover:shadow-[3px_3px_0px_rgba(0,0,0,1)] hover:translate-x-[3px] hover:translate-y-[3px]">
      <!-- Clickable overlay -->
      <a href={`/blog/${post.slug}/`} class="absolute inset-0 z-10" aria-label={`Lire: ${title}`}></a>

      <div class="grid grid-cols-1 md:grid-cols-[55%_45%]">
        <!-- Image -->
        <div class="relative aspect-video md:aspect-auto overflow-hidden border-b-2 md:border-b-0 md:border-r-2 border-black">
          <img
            src={image.url}
            alt={image.alt}
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
          />
          <!-- Gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </div>

        <!-- Content -->
        <div class="p-6 md:p-8 flex flex-col justify-center">
          <!-- Category + Meta -->
          <div class="flex items-center gap-3 mb-4">
            <CategoryBadge category={category} size="md" />
            <span class="text-xs text-gray-500">
              {formatDate(pubDate)}
            </span>
            {readingTime && (
              <span class="flex items-center gap-1 text-xs text-gray-500">
                <i class="ri-time-line"></i>
                {readingTime} min
              </span>
            )}
          </div>

          <!-- Title -->
          <h2 class="text-2xl md:text-3xl font-normal mb-4 leading-tight group-hover:text-[var(--violet)] transition-colors duration-200">
            {title}
          </h2>

          <!-- Description -->
          <p class="text-gray-600 text-base md:text-lg leading-relaxed mb-6">
            {description}
          </p>

          <!-- Tags -->
          {tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-6">
              {tags.map((tag) => (
                <span class="px-2 py-1 bg-white border border-gray-200 text-xs text-gray-500">
                  #{tag}
                </span>
              ))}
            </div>
          )}

          <!-- Read more -->
          <span class="inline-flex items-center gap-2 text-sm font-bold uppercase tracking-wide">
            <span class="
              relative
              before:absolute before:left-0 before:bottom-0
              before:h-[2px] before:w-0 before:bg-[var(--accent)]
              before:transition-all before:duration-300
              group-hover:before:w-full
            ">
              Lire l'article
            </span>
            <i class="ri-arrow-right-line transition-transform duration-200 group-hover:translate-x-1"></i>
          </span>
        </div>
      </div>

      <!-- Corner boxes decoration -->
      <div class="size-2 border-2 absolute -top-[5px] -right-[5px] bg-white border-black hidden md:block"></div>
      <div class="size-2 border-2 absolute -bottom-[5px] -left-[5px] bg-white border-black hidden md:block"></div>
    </article>
  </div>
</section>
