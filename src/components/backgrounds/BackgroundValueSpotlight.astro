---
interface Props {
    color?: string;
    showWatermark?: boolean;
    intensity?: number;
}

const {
    color = 'var(--blue)',
    showWatermark = true,
    intensity = 0.1
} = Astro.props;
---

<div class="value-spotlight-bg" aria-hidden="true">
    <!-- Central spotlight gradient -->
    <div class="spotlight spotlight-main"></div>
    <div class="spotlight spotlight-secondary"></div>

    <!-- CHF watermarks -->
    {showWatermark && (
        <div class="watermarks">
            <span class="watermark wm-1">CHF</span>
            <span class="watermark wm-2">CHF</span>
            <span class="watermark wm-3">CHF</span>
            <span class="watermark wm-4">CHF</span>
            <span class="watermark wm-5">CHF</span>
        </div>
    )}
</div>

<style define:vars={{ color, intensity }}>
    .value-spotlight-bg {
        position: absolute;
        inset: 0;
        pointer-events: none;
        z-index: 0;
        overflow: hidden;
    }

    /* Spotlight gradients */
    .spotlight {
        position: absolute;
        border-radius: 50%;
    }

    .spotlight-main {
        width: 600px;
        height: 600px;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        background: radial-gradient(
            circle,
            var(--color) 0%,
            transparent 70%
        );
        opacity: var(--intensity);
    }

    .spotlight-secondary {
        width: 400px;
        height: 400px;
        right: 10%;
        top: 20%;
        background: radial-gradient(
            circle,
            var(--color) 0%,
            transparent 60%
        );
        opacity: calc(var(--intensity) * 0.5);
    }

    /* CHF watermarks */
    .watermarks {
        position: absolute;
        inset: 0;
    }

    .watermark {
        position: absolute;
        font-family: 'Space Grotesk', sans-serif;
        font-weight: 700;
        color: var(--color);
        opacity: 0.04;
        user-select: none;
    }

    .wm-1 {
        font-size: 180px;
        top: 5%;
        left: 5%;
        transform: rotate(-15deg);
    }

    .wm-2 {
        font-size: 120px;
        top: 60%;
        left: 15%;
        transform: rotate(10deg);
        opacity: 0.03;
    }

    .wm-3 {
        font-size: 200px;
        top: 20%;
        right: 5%;
        transform: rotate(8deg);
        opacity: 0.035;
    }

    .wm-4 {
        font-size: 100px;
        bottom: 10%;
        right: 20%;
        transform: rotate(-5deg);
        opacity: 0.025;
    }

    .wm-5 {
        font-size: 150px;
        top: 45%;
        left: 50%;
        transform: translateX(-50%) rotate(-3deg);
        opacity: 0.02;
    }
</style>
