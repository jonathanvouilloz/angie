---
import { generateJSONLD, type SchemaType, type JSONLDSchema } from '../lib/seo';

interface Props {
  // Core SEO
  title: string;
  description: string;
  canonical?: string;

  // Open Graph
  ogImage?: string;
  ogType?: 'website' | 'article';

  // Article-specific (for blog posts)
  article?: {
    publishedTime: Date;
    modifiedTime?: Date;
    author: string;
    section?: string;
    tags?: string[];
  };

  // Structured Data - NEW: supports array of schemas
  schemas?: Array<{ type: SchemaType; data?: any }> | JSONLDSchema[];

  // Structured Data - Legacy support (single schema)
  schema?: SchemaType;
  schemaData?: Record<string, any>;

  // Meta robots
  robots?: string;
}

// Props with defaults
const {
  title,
  description,
  canonical,
  ogImage = '/og-image.svg',
  ogType = 'website',
  article,
  schemas,
  schema,
  schemaData,
  robots = 'index, follow'
} = Astro.props;

// Generate canonical URL
const canonicalURL = canonical
  ? new URL(canonical, Astro.site)
  : new URL(Astro.url.pathname, Astro.site);

const ogImageURL = new URL(ogImage, Astro.site);

// Generate JSON-LD schemas
let jsonLdSchemas: JSONLDSchema[] = [];

// Handle new schemas array format
if (schemas && schemas.length > 0) {
  // Check if it's already JSONLDSchema objects or needs generation
  if ('@context' in schemas[0]) {
    // Already JSON-LD objects
    jsonLdSchemas = schemas as JSONLDSchema[];
  } else {
    // Generate from type definitions
    jsonLdSchemas = (schemas as Array<{ type: SchemaType; data?: any }>)
      .map(({ type, data }) => generateJSONLD(type, data, Astro))
      .filter((s): s is JSONLDSchema => s !== null);
  }
}

// Legacy single schema support
if (schema && jsonLdSchemas.length === 0) {
  const legacySchema = generateJSONLD(schema, schemaData, Astro);
  if (legacySchema) {
    jsonLdSchemas = [legacySchema];
  }
}
---

<!-- Meta tags -->
<meta name="description" content={description} />
<meta name="robots" content={robots} />
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:type" content={ogType} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:image" content={ogImageURL} />
<meta property="og:site_name" content="Jon Labs" />
<meta property="og:locale" content="fr_CH" />

{article && (
  <>
    <meta property="article:published_time" content={article.publishedTime.toISOString()} />
    {article.modifiedTime && (
      <meta property="article:modified_time" content={article.modifiedTime.toISOString()} />
    )}
    <meta property="article:author" content={article.author} />
    {article.section && <meta property="article:section" content={article.section} />}
    {article.tags?.map(tag => <meta property="article:tag" content={tag} />)}
  </>
)}

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImageURL} />

<!-- JSON-LD Structured Data -->
{jsonLdSchemas.map((jsonLd) => (
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd, null, 2)} />
))}
