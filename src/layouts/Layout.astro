---
import SEO from '../components/SEO.astro';

interface Props {
	title?: string;
	description?: string;
	ogImage?: string;
	ogType?: 'website' | 'article';
	schema?: 'Organization' | 'Person' | 'BlogPosting' | 'FAQPage' | 'Service';
	schemaData?: Record<string, any>;
	article?: {
		publishedTime: Date;
		modifiedTime?: Date;
		author: string;
		section?: string;
		tags?: string[];
	};
}

const {
	title = "Jon Labs - Solutions Digitales",
	description = "Développement web, automatisation, applications. De l'idée au produit fini, j'accompagne entrepreneurs et petites équipes dans leurs projets digitaux.",
	ogImage = "/og-image.svg",
	ogType = "website",
	schema = "Organization",
	schemaData,
	article
} = Astro.props;
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<SEO
			title={title}
			description={description}
			ogImage={ogImage}
			ogType={ogType}
			schema={schema}
			schemaData={schemaData}
			article={article}
		/>

		<title>{title}</title>
	</head>
	<body>
		<slot />
		<script>
			import '../scripts/animations';
		</script>
	</body>
</html>

<style>

:root{
	/* Palette "Lab Scientifique" */
	--main-bg: #FAFAFA;              /* Blanc cassé */
	--blue: #00D9A3;                 /* Vert labo - accent principal */
	--yellow: #00A87D;               /* Vert foncé - hover buttons */
	--accent: rgba(163, 0, 217, 0.35);  /* Magenta/Violet transparent - soulignements texte */
	--violet: #A300D9;                  /* Magenta/Violet vif - détails */
	--text: #0F172A;                 /* Noir charbon */
}

html,
body {
	margin: 0;
	width: 100%;
	min-height: 100%;
	background-color: var(--main-bg);
	color: var(--text);
	font-family: "Space Grotesk", sans-serif;
	scroll-behavior: smooth;
}


</style>
