---
interface Props {
	title?: string;
	description?: string;
	ogImage?: string;
}

const {
	title = "Jon Labs - Solutions Digitales",
	description = "Développement web, automatisation, applications. De l'idée au produit fini, j'accompagne entrepreneurs et petites équipes dans leurs projets digitaux.",
	ogImage = "/og-image.svg"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL(ogImage, Astro.site);
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href={canonicalURL} />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="robots" content="index, follow" />

		<!-- Open Graph -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:locale" content="fr_CH" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:image" content={ogImageURL} />
		<meta property="og:site_name" content="Jon Labs" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImageURL} />

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>

:root{
	/* Palette "Lab Scientifique" */
	--main-bg: #FAFAFA;              /* Blanc cassé */
	--blue: #00D9A3;                 /* Vert labo - accent principal */
	--yellow: #00A87D;               /* Vert foncé - hover buttons */
	--accent: rgba(163, 0, 217, 0.35);  /* Magenta/Violet transparent - soulignements texte */
	--violet: #A300D9;                  /* Magenta/Violet vif - détails */
	--text: #0F172A;                 /* Noir charbon */
}

html,
body {
	margin: 0;
	width: 100%;
	min-height: 100%;
	background-color: var(--main-bg);
	color: var(--text);
	font-family: "Space Grotesk", sans-serif;
	scroll-behavior: smooth;
}


</style>
