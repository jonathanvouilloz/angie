---
import '../../styles/global.css';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const seoData = {
    title: "Outils gratuits | Jon Labs",
    description: "Ressources et outils gratuits pour les commerçants et entrepreneurs. Checklists, guides pratiques et templates."
};

const outils = [
    {
        title: "Checklist : Commerce visible sur Google",
        description: "Plan d'action en 4 semaines pour rendre ton commerce visible sur Google. Google Business, site one-page, avis clients.",
        link: "/outils/checklist-commerce-google",
        badge: "Gratuit",
        icon: "ri-checkbox-circle-line"
    }
];
---

<Layout
    title={seoData.title}
    description={seoData.description}
>
    <Header />

    <main class="pt-32 pb-16 md:pt-40 md:pb-24 px-4">
        <div class="max-w-4xl mx-auto">
            <!-- Header -->
            <div class="text-center mb-12">
                <span class="inline-flex items-center gap-2 bg-[var(--blue)] border-2 border-black px-4 py-1 text-sm font-medium mb-6">
                    <i class="ri-tools-line text-black"></i>
                    Ressources
                </span>

                <h1 class="text-3xl md:text-4xl lg:text-5xl font-normal tracking-tight mb-4">
                    Outils gratuits
                </h1>

                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    Des ressources pratiques pour t'aider à développer ta présence en ligne, sans jargon.
                </p>
            </div>

            <!-- Liste des outils -->
            <div class="space-y-6">
                {outils.map((outil) => (
                    <a
                        href={outil.link}
                        class="block bg-white border-3 border-black p-6 shadow-[4px_4px_0px_rgba(0,0,0,1)] transition-all duration-200 hover:shadow-[2px_2px_0px_rgba(0,0,0,1)] hover:translate-x-[2px] hover:translate-y-[2px] group"
                    >
                        <div class="flex flex-col md:flex-row md:items-center gap-4">
                            <div class="w-14 h-14 bg-[var(--blue)] border-2 border-black flex items-center justify-center flex-shrink-0">
                                <i class={`${outil.icon} text-2xl`}></i>
                            </div>

                            <div class="flex-1">
                                <div class="flex items-center gap-3 mb-2">
                                    <h2 class="text-xl font-bold group-hover:text-[var(--violet)] transition-colors">
                                        {outil.title}
                                    </h2>
                                    <span class="bg-green-100 text-green-700 text-xs font-bold px-2 py-1 border border-green-300">
                                        {outil.badge}
                                    </span>
                                </div>
                                <p class="text-gray-600">
                                    {outil.description}
                                </p>
                            </div>

                            <div class="flex-shrink-0 hidden md:block">
                                <i class="ri-arrow-right-line text-2xl text-gray-400 group-hover:text-[var(--violet)] group-hover:translate-x-1 transition-all"></i>
                            </div>
                        </div>
                    </a>
                ))}
            </div>

            <!-- Note -->
            <div class="mt-12 text-center">
                <p class="text-sm text-gray-500">
                    D'autres outils arrivent bientôt.
                </p>
            </div>
        </div>
    </main>

    <Footer />
</Layout>
