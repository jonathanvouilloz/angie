---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// SEO Data
const seoData = {
    title: "Merci ! Voici ta checklist | Jon Labs",
    description: "Ta checklist est prete. Telecharge le PDF et commence a rendre ton commerce visible sur Google."
};
---

<Layout
    title={seoData.title}
    description={seoData.description}
>
    <Header />

    <main class="min-h-[70vh] flex items-center justify-center py-20 px-4">
        <div class="max-w-xl mx-auto text-center">
            <!-- Success icon -->
            <div class="w-20 h-20 bg-green-500 border-3 border-black mx-auto mb-8 flex items-center justify-center shadow-[4px_4px_0px_rgba(0,0,0,1)]">
                <i class="ri-check-line text-white text-4xl"></i>
            </div>

            <!-- Title -->
            <h1 class="text-3xl md:text-4xl font-bold mb-4">
                Merci ! Ta checklist est prete.
            </h1>

            <p class="text-lg text-gray-600 mb-8">
                Clique sur le bouton ci-dessous pour acceder a ta checklist PDF avec tous les bonus.
            </p>

            <!-- Download button -->
            <a
                href="/outils/checklist-commerce-google-pdf"
                class="
                    inline-flex items-center gap-3
                    bg-[var(--blue)]
                    border-3 border-black
                    px-8 py-4
                    text-xl font-bold
                    shadow-[6px_6px_0px_rgba(0,0,0,1)]
                    transition-all duration-200
                    hover:bg-[var(--yellow)]
                    hover:shadow-[3px_3px_0px_rgba(0,0,0,1)]
                    hover:translate-x-[3px] hover:translate-y-[3px]
                "
            >
                <i class="ri-download-line"></i>
                Telecharger le PDF
            </a>

            <!-- Instructions -->
            <div class="mt-8 bg-white border-2 border-black p-6 text-left">
                <h2 class="font-bold mb-3 flex items-center gap-2">
                    <i class="ri-information-line text-[var(--blue)]"></i>
                    Comment ca marche ?
                </h2>
                <ol class="space-y-2 text-gray-600">
                    <li class="flex items-start gap-2">
                        <span class="font-bold text-black">1.</span>
                        Clique sur "Telecharger le PDF" ci-dessus
                    </li>
                    <li class="flex items-start gap-2">
                        <span class="font-bold text-black">2.</span>
                        Une page s'ouvre avec ta checklist complete
                    </li>
                    <li class="flex items-start gap-2">
                        <span class="font-bold text-black">3.</span>
                        Clique sur le bouton "Telecharger PDF" en haut a droite
                    </li>
                    <li class="flex items-start gap-2">
                        <span class="font-bold text-black">4.</span>
                        Garde-la sur ton telephone ou imprime-la !
                    </li>
                </ol>
            </div>

            <!-- Bonus reminder -->
            <div class="mt-6 bg-[var(--main-bg)] border-2 border-black p-4">
                <p class="text-sm">
                    <strong>Dans ton PDF :</strong> La checklist complete + 3 modeles de messages + guide QR code + audit express + hack horaires Google
                </p>
            </div>

            <!-- CTA Section -->
            <div class="mt-12 pt-8 border-t-2 border-gray-200">
                <p class="text-gray-500 mb-4">Tu preferes qu'on s'en occupe pour toi ?</p>
                <a
                    href="/contact"
                    class="
                        inline-flex items-center gap-2
                        bg-white
                        border-2 border-black
                        px-6 py-3
                        font-medium
                        transition-all duration-200
                        hover:bg-gray-100
                    "
                >
                    <i class="ri-chat-3-line"></i>
                    Demander un devis
                </a>
            </div>

            <!-- Back link -->
            <div class="mt-8">
                <a href="/outils/checklist-commerce-google" class="text-gray-500 hover:text-[var(--blue)] transition-colors">
                    <i class="ri-arrow-left-line"></i>
                    Retour a la checklist en ligne
                </a>
            </div>
        </div>
    </main>

    <Footer />
</Layout>
